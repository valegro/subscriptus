<% if flash[:error] %>
  <% content_tag :span, :style => "color: red" do %>
    <%= flash[:error] %>
  <% end %>
<% end %>

<% content_tag :div, :class => 'title' do%>
  <%= content_tag :h2, "Login" %>
<% end %>  
<% form_for(@user_session, :url => user_session_path, :builder => Reform::Builder, :html => { :class => "form" }) do |f| %>
  <%= f.text_field :login %>
  <%= f.password_field :password %>
  <%= f.check_box :remember_me %>
  <%= f.submit "Login" %>
<% end %>
