<div class="title">
  <%= content_tag :h2, "Edit Source" %>
  <div class="actions">
    <%= link_to 'Delete', admin_source_path(@source), :method => :delete, :confirm => "Are you sure?", :class => "delete" %>
    <%= link_to 'Back to Sources', admin_sources_path, :class => 'back' %>
  </div>
</div>

<% form_for [:admin, @source], :builder => Reform::Builder, :html => { :class => "form", :multipart => true } do |form| %>
  <%= render :partial => "form", :object => form %>
  <%= form.submit "Update" %>
<% end %>
