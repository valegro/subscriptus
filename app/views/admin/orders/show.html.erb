<%= render :partial => "shared/admin/user", :locals => {:user => @user}%>

<dl>
  <dt>Subscription</dt>
  <dd><%= @order.try(:subscription).try(:offer).try(:name) || 'Subscription offer could not be found.' %></dd>
  <dt>Date Placed</dt>
  <dd><%= format_timestamp(@order.created_at)%></dd>
<% unless @order.pending? %>
  <dt>Date Processed</dt>
  <dd><%= format_timestamp(@order.updated_at)%></dd>
<% end %>
  <dt>Gift(s)</dt>
  <dd><%= @order.gifts.map(&:name).join(', ') %></dd>
</dl>

<%= order_event_links(@order, false).join('&nbsp;') %>