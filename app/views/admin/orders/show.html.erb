<% if @user %>
  <dl>
    <dt>Name</dt>
    <dd><%= [@user.title, @user.name].join('&nbsp;') %></dd>
    <dt>Email address</dt>
    <dd><%= @user.email %></dd>
  </dl>

  <dl>
  <% if @user.company %>
    <dt>Company</dt>
    <dd><%= @user.company %></dd>
  <% end %>
    <dt>Address</dt>
    <dd>
      <%= @user.address_1 %><br/>
      <%= @user.address_2 %><br/>
      <%= @user.city %><br/>
      <%= @user.state.to_s.upcase %>&nbsp;<%= @user.postcode %><br/>
      <%= @user.country %>
    </dd>
  </dl>
<% end %>

<dl>
  <dt>Subscription</dt>
  <dd><%= @order.try(:subscription).try(:offer).try(:name) || 'Subscription offer could not be found.' %></dd>
  <dt>Date Placed</dt>
  <dd><%= format_timestamp(@order.created_at)%></dd>
<% unless @order.pending? %>
  <dt>Date Processed</dt>
  <dd><%= format_timestamp(@order.updated_at)%></dd>
<% end %>
  <dt>Gift(s)</dt>
  <dd><%= @order.gifts.map(&:name).join(', ') %></dd>
</dl>

<%= order_event_links(@order, false).join('&nbsp;') %>