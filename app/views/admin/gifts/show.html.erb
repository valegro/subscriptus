<div class="title">
  <%= content_tag :h2, @gift.name %>
  <div class="actions">
    <%= link_to 'Delete', admin_gift_path(@gift), :method => :delete, :confirm => "Are you sure?" %>
    <%= link_to 'Back to Gifts', admin_gifts_path, :class => 'back' %>
  </div>
</div>

<%= image_tag(@gift.gift_image.url(:medium)) %> 
<p><%= @gift.description %></p>

