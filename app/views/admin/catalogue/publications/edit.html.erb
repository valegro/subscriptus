<div class="title">
  <%= content_tag :h2, "Edit Publication" %>
  <div class="actions">
    <%= link_to 'Delete', admin_catalogue_publication_path(@publication), :method => :delete, :confirm => "Are you sure?", :class => "delete" %>
    <%= link_to 'Back to Publications', admin_catalogue_publications_path, :class => 'back' %>
  </div>
</div>

<% form_for [:admin, :catalogue, @publication], :builder => Reform::Builder, :html => { :class => "form", :multipart => true } do |form| %>
  <%= form.error_messages %>
  <%= render :partial => "form", :object => form %>
  <%= form.submit "Update" %>
<% end %>
